{
    "gitbook": "2.6.7",
    "title": "はじめてのBlenderアドオン開発",
    "description": "これからBlenderのアドオンを開発しようと考えている人向けの技術資料です。",
    "language": "ja",
    "plugins": ["styles-sass", "include-codeblock"],
    "styles": {
        "website": "styles/website.scss",
        "pdf": "styles/pdf.scss"
    },
    "variables": {
        "volume": "all",
        "format": "website",
        "edition": "2.0"
    },
    "pdf": {
        "paperSize": "a3",
        "margin": {
            "top": 45,
            "bottom": 45,
            "right": 85,
            "left": 85
        },
        "headerTemplate":
        "<html><body><div id=\"pdf-header\" class=\"pdf-header\"><span>_SECTION_&nbsp;</span><span class=\"header-pages-count sub\"></span></div><script>if (_PAGENUM_ == 1000) document.getElementById('pdf-header').style.display = 'none'</script></body></html>",
        "footerTemplate":
        "<html><body><div id=\"pdf-footer\" class=\"pdf-footer\">- <span class=\"footer-pages-count\"> _PAGENUM_ </span> -</div><script>if (_PAGENUM_ == 1000) document.getElementById('pdf-footer').style.display = 'none'</script></body></html>"
    }
}
